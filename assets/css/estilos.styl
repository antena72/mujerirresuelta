    footer
        #creditos 
            text-align center 
    
    #inicio.container-fluid 
        section 
            margin-top 10px
            &#textoIntro 
                h3
                    text-align center
                    width 100%
                #firma
                    float right
            .btnLeerMasIrene
            .btnLeerMasClaro
            .btnLeerMasOscuro
                width 75%

            &#sobreIrene 
                padding-top 50px!important
                padding-bottom 50px!important
    #sobreGrus
        .nav
            border-right none  !important
            border-bottom solid 3px grisOscuro
            padding-bottom 20px
            margin-bottom 20px
        button 
            font-size 1.7em!important
            margin-bottom 10px
            padding 10px 0!important
            text-align center
        #txtAulicino 
            .lead
            p
                font-size 14px!important
            blockquote
                font-size 10px
                margin-top 10px
                padding-left 10px
            figcaption
                font-size 10px
    #contacto
        height calc(100vh - 100px)
        #creditoFoto
            min-width 230px
            #fotoEscritorio
                display none
            #fotoIpad
                display block
    #poemas 
        .col-12 
            padding-right 5px!important
            padding-left 5px!important
        article 
            width 100%!important
            .txtPoema
                font-size 12.5px!important
                margin-left 5px!important
            p.text-right
                font-size 11px!important
    #proyecto
        height calc(100vh + 1600px)
    .back-to-top
        bottom 10em
    #sobreGrus
        button 
            font-size 12px
            &.active
                text-decoration underline
            &.nav-link
                &.active:after
                    content " "
