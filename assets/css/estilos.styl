    .container-fluid 
        padding-top 110px!important
    #inicio.container-fluid 
        section 
            #resumen
                div 
                    margin-top 30px!important
                #poemasGruss
                    margin-bottom 30px!important
    #poemas 
        ul#listaPoemas
            margin-top 0px!important
            padding-top 0px!important
            li a 
                font-size 1.2em!important
                line-height 1.9em!important
        article
            border solid 2px caquiOscuro
            border-radius 4px
            margin-bottom 20px
            width 80%
            iframe 
                border-bottom solid 2px caquiOscuro
            h4 
                font-family sans-serif!important
                text-align center
            .txtPoema
                margin 20px 0 30px 30px!important
                white-space nowrap
            .libro 
                background caquiOscuro
                padding 10px
                text-align right
    header 
        .navbar-dark
            h1
                font-size 3em!important
                text-align left!important
            h3
                font-size 1.8em!important
                letter-spacing 2px
                text-align left!important
            .navbar-toggler 
                color caqui
                position absolute 
                top 20px
                right 30px
